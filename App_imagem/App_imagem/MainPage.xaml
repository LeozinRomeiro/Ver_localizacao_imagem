<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_imagem.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Image Source="galeria" x:Name="imagem" VerticalOptions="CenterAndExpand"/>
        
        <Label Text="Latitude: " HorizontalTextAlignment="Center" x:Name="label_latitude" TextColor="black"/>
        <Label Text="Longitude: " HorizontalTextAlignment="Center" x:Name="label_longitude" TextColor="Black"/>
        
        <Button Text="Tirar foto" Clicked="Button_tirar_Clicked" VerticalOptions="CenterAndExpand" />
        <Button Text="Ver localização no mapa" Clicked="Button_ver_Clicked" VerticalOptions="StartAndExpand"/>

    </StackLayout>

</ContentPage>
